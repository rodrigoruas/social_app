<%= turbo_frame_tag :new_message, class: "w-full p-4 mt-6 border-t border-gray-200" do %>
  <div>
    <div class="flex">
      <%= form_with model: conversation.messages.build, url: conversation_messages_path(conversation), class: "w-full" do |form| %>
        <%= form.text_area :content, class: "p-4 block w-full h-24 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Reply" %>

        <div class="mt-2 flex justify-end">
          <%= button_tag "Reply", class: "bg-indigo-500 text-white px-4 py-2 rounded-md shadow hover:bg-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
