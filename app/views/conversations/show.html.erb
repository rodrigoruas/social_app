<div class="bg-white py-3 px-2 sm:px-4 md:px-4 border border-gray-200 rounded-md shadow">
  <div class="flex flex-col items-center">
    <%= turbo_stream_from :conversations, @conversation.id %>
    
    <%= turbo_frame_tag current_user, :messages, class: "w-full p-4 flex flex-col gap-8" do %>
      <%= render @messages, current_user: current_user  %>
    <% end %>

    <%= render partial: "messages/form", locals: { conversation: @conversation } %>
  </div>
</div>